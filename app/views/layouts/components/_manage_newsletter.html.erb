<div id="newsletter">
  <% if user&.subscribed?(name) %>
    <%= button_to "Unsubscribe", newsletter_manage_path(name: name), method: :post, data: {turbo_method: :delete}, class:"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
  <% else %>
    <%= button_to "Subscribe", newsletter_manage_path(name: name), method: :post, data: {turbo_method: :post}, class:"bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>
  <% end %>
</div>

