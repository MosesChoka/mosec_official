<div class="bd-grey-lighter mt-20 mb-20 flex flex-col">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full">
      <h2 class="font-roboto font-bold text-2xl sm:text-3xl text-center pt-10 pb-3">Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"block border border-grey-light w-full p-3 rounded mb-4", placeholder:"email@example.com" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "new-password", class:"block border border-grey-light w-full p-3 rounded mb-4", placeholder:"password" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"block border border-grey-light w-full p-3 mt-2 rounded mb-4", placeholder:"password confirmation" %>
        </div>

        <div class="actions">
          <butt class="cursor-pointer py-2 px-4 block mt-6 bg-green-500 text-white font-bold w-full text-center rounded"><%= f.submit "Sign up"%></butt> 
        </div>
      <% end %>
    </div>
  </div>
</div>
<%#= render "devise/shared/links" %>
