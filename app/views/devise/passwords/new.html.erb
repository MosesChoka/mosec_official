<div class="bg-grey-lighter mt-20 mb-20  flex flex-col">
  <div class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2">
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full"> 
      <h2 class="text-2xl sm:text-3xl text-center font-roboto font-semibold mb-3">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"block border border-grey-light w-full p-3 rounded mb-4" %>
        </div>

        <div class="actions">
          <butt class="text-sm cursor-pointer py-2 px-4 block mt-6 bg-blue-500 text-white font-bold w-full text-center rounded mb-2"><%= f.submit "Send me reset password instructions" %></butt>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
